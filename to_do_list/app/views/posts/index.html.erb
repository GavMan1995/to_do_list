<h1>Lists</h1>
<p><%= link_to "New List Item", new_post_path %></p>
<% @posts.each do |post| %>
<h2><%= post.todo %></h2>
<p><%= post.comment %></p>
<%= link_to 'Show List', post_path(post) %>
<%= link_to 'Edit Post', edit_post_path(post) %>
<%= link_to 'Destroy Post', post, method: :delete %>
<% end %>
